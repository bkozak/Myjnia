@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-right">
        <li>
            @Html.ActionLink("Witaj " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
        </li>
        <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
    </ul>
    }
}
else
{
    <nav class="navbar-nav navbar-dark bg-light text-white">

        <ul class="navbar-nav">
            <li class="nav-item small">               
                    @Html.ActionLink("Rejestracja", "Register", "Account", routeValues: null, htmlAttributes: new { @class = "dropdown-item" })
                </li>
            <li class="nav-item small">
                    @Html.ActionLink("Logowanie", "Login", "Account", routeValues: null, htmlAttributes: new { @class = "dropdown-item" })       
            </li>           
        </ul>
        </nav>
        }
